<Window x:Class="Asuoki_App.loader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asuoki_App"
        WindowStartupLocation="CenterScreen"
        WindowStyle = "None"
        mc:Ignorable="d"
        Title="loader" Height="420" Width="420" Background="#FF323232" ResizeMode="NoResize" BorderBrush="#FFE899D2" BorderThickness="2,2,2,2" >
    
    <Grid>
        <Grid.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="6"/>
            </Style>
        </Grid.Resources>
        <Image Source="/img/asuoki.png" HorizontalAlignment="Center" Height="131" Margin="0,62,0,0" VerticalAlignment="Top" Width="130" RenderTransformOrigin="0.5,0.52"/>
        <TextBlock HorizontalAlignment="Center" Height="36" Margin="0,196,0,0" TextWrapping="Wrap" Text="Connecting" VerticalAlignment="Top" Width="204" Foreground="#FFE899D2" FontSize="24" TextAlignment="Center" FontFamily="Cascadia Mono"/>
        <Button Content="Cancel" HorizontalAlignment="Center" Margin="0,344,0,0" VerticalAlignment="Top" Height="40" Width="204" Foreground="#FFE899D2" Background="#FF323232" FontFamily="Cascadia Mono" FontSize="24" Click="Button_Click" BorderBrush="#FF323232"/>
    </Grid>
</Window>
