#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../ethereum-public-key-to-address/bin/ethereum_public_key_to_address" "$@"
else 
  exec node  "$basedir/../ethereum-public-key-to-address/bin/ethereum_public_key_to_address" "$@"
fi
